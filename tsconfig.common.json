{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "esnext"
    ],
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "removeComments": true,
    "baseUrl": ".",
    "paths": {
      "@enre/shared": [
        "packages/enre-shared/src"
      ],
      "@enre/naming": [
        "packages/enre-naming/src"
      ],
      "@enre/path-finder": [
        "packages/enre-path-finder/src"
      ],
      "@enre/location": [
        "packages/enre-location/src"
      ],
      "@enre/test-finder": [
        "packages/enre-test-finder/src"
      ],
      "@enre/doc-validator": [
        "packages/enre-doc-validator/src"
      ],
      "@enre/doc-parser": [
        "packages/enre-doc-parser/src"
      ],
      "@enre/data": [
        "packages/enre-data/src"
      ],
      "@enre/core": [
        "packages/enre-core/src"
      ],
      "@enre/cli": [
        "packages/enre-cli/src"
      ],
      "@enre/test-generator": [
        "packages/enre-test-generator/src"
      ],
      "@enre/cross-tester": [
        "packages/enre-cross-tester/src"
      ]
    }
  }
}
